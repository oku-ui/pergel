{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rebaseWhen": "conflicted",
  "schedule": [
    "every 8 months on the first day of the month"
  ],
  "baseBranches": [
    "main"
  ],
  "rangeStrategy": "bump",
  "ignoreDeps": [
    "node",
    "pnpm"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchDepTypes": [
        "peerDependencies"
      ]
    },
    {
      "groupName": ".docs",
      "commitMessageTopic": ".docs",
      "matchPaths": [
        ".docs/**"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "examples",
      "commitMessageTopic": "examples",
      "matchPaths": [
        "examples/**"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "cli",
      "commitMessageTopic": "cli",
      "matchPaths": [
        "packages/cli/**"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "nuxt",
      "commitMessageTopic": "nuxt",
      "matchPaths": [
        "packages/nuxt/**"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "graphql",
      "commitMessageTopic": "graphql",
      "matchPaths": [
        "packages/graphql/**"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "s3",
      "commitMessageTopic": "s3",
      "matchPaths": [
        "packages/s3/**"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "root",
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "ignorePaths": [
        "**/examples/**",
        "**/packages/cli/**",
        "**/packages/nuxt/**",
        "**/packages/graphql/**",
        "**/packages/s3/**",
        "**/.docs/**"
      ],
      "matchDatasources": [
        "npm",
        "github-actions"
      ],
      "labels": [
        "dependencies"
      ],
      "addLabels": [
        "dependencies"
      ],
      "matchFiles": [
        "package.json"
      ]
    }
  ]
}
